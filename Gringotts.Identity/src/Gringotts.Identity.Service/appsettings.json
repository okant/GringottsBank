{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ServiceSettings": {
    "ServiceName": "Identity"
  },
  "MongoDbSettings": {
    "Host": "localhost",
    "Port": 27017
  },
  "IdentityServerSettings": {
    "ApiScopes": [
      {
        "Name": "customer.fullaccess"
      },
      {
        "Name": "account.fullaccess"
      },
      {
        "Name": "IdentityServerApi"
      }
    ],
    "ApiResources": [
      {
        "Name": "Customer",
        "Scopes": ["customer.fullaccess"]
      },
      {
        "Name": "Account",
        "Scopes": ["account.fullaccess"]
      }
    ]
  },
  "AllowedHosts": "*"
}
